    <!-- Formulario para agregar nueva información de seguridad -->
   
   <div class="contenedor-actividad">
    <h1>Crear Nueva Actividad</h1>
     <form action="/actividad/crear" method="POST">
        <label for="titulo">Título:</label>
        <input type="text" id="titulo" name="titulo" required>
        <br>
        <label for="descripcion">Descripcion:</label>
        <textarea id="descripcion" name="descripcion" rows="4" required></textarea>
        <br>
        <label for="multimedia">Multimedia:</label>
        <input type="text" id="multimedia" name="multimedia">
        <br>
        <button type="submit">Crear Actividad</button>
    </form>
</div>
    <div class="cuadro-independiente">
<div class="container">
        <h1>Actividades</h1>
        {{#each actividad}}
        <div class="info-card">
            <h2>{{this.dataValues.titulo}}</h2>
            <p><strong>Descripcion:</strong> {{this.dataValues.descripcion}}</p>
            <p><strong>Multimedia:</strong> {{this.dataValues.multimedia}}</p>
             <a href="/actividad/{{ this.dataValues.id }}/editar"><button>Editar</button></a>
          <form action="/actividad/eliminar/{{ this.dataValues.id }}" method="DELETE">
            <button type="submit">Eliminar</button>
        </form>
        </div>
        {{/each}}
        
    </div>
    </div>

